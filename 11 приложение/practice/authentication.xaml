<Page x:Class="practice.authentication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="authentication">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30" />
                <RowDefinition/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="login"/>
            <TextBox Grid.Row="1" x:Name="tb_login" Margin="0,5,0,5"/>
            <Label Grid.Row="2" Content="password"/>
            <TextBox Grid.Row="3" x:Name="tb_password" Margin="0,5,0,5"/>
            <Button Grid.Row="4" Content="auth" Click="Button_Click"/>
        </Grid>
    </Grid>
</Page>
